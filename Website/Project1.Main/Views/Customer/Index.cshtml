@model CustomerViewModel

@{
    ViewData["Title"] = "Customer Login";
}

@section scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
    <script src="~/js/name_search.js" asp-append-version="true"></script>
}

@section navbar_items {
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" id="customers-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Customers
        </a>
        <div id="search-menu" class="dropdown-menu" aria-labelledby="customers-dropdown">

            <input id="search" type="text" class="form-control" placeholder="Search" />

            @foreach (var option in Model.CustomerOptions) {
                <a class="dropdown-item" href="#" value="@option.Name">@Html.DisplayFor(m => option.Name)</a>
            }
        </div>
    </li>
}

<div class="h-100 row" style="margin-top: 5%; margin-left: 25% !important; width: 50% !important;">
    <div class="col" style="border: 3px solid #f6f7f8; padding-bottom: 15px; padding-top: 5px;">

        @{ await Html.RenderPartialAsync ("_Banners"); }
        <!--<div class="text-center">
        <div class="alert alert-danger" role="alert" id="error-banner" style="display: none;"></div>
        <div class="alert alert-success" role="alert" id="success-banner" style="display: none;"></div>
    </div>-->

        <form id="login-form">

            @Html.AntiForgeryToken()

            <div id="firstname" class="form-group">
                <label asp-for="Firstname">Firstname</label>
                <input asp-for="Firstname" type="text" class="form-control" />
                <span asp-validation-for="Firstname"></span>
            </div>

            <div id="lastname" class="form-group">
                <label asp-for="Lastname">Lastname</label>
                <input asp-for="Lastname" type="text" class="form-control" />
                <span asp-validation-for="Lastname"></span>
            </div>

            <span class="form-group">
                <button type="submit" value="login" class="btn btn-primary">Login</button>
                <button type="submit" value="create" class="btn btn-primary">Create</button>
            </span>

        </form>
    </div>
</div>
